window "mainwindow"
	elem "mainwindow"
		type = MAIN
		size = 800x440
		anchor1 = -1,-1
		anchor2 = -1,-1
		background-color = #000000
		is-default = true
		statusbar = false
		is-maximized = true
		saved-params = "pos;size;is-minimized;is-maximized"
		title = "Civilization 13"
		icon = 'icons\\taskbar.png'
		macro = "hotkeymode"
		menu = "menu"
	elem "mainvsplit"
		type = CHILD
		size = 0x0
		anchor1 = 0,0
		anchor2 = 100,100
		background-color = #271a0c
		saved-params = "splitter"
		left = "mapwindow"
		right = "rpane"
		is-vert = true

